# ============================================================================
# CONFIGURAÇÃO - Getmoto LTD

# URL base da API
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================

# URL base da API (SEM barra no final)
# VITE_API_BASE_URL=https://api-crm-getmoto-api.i5mfns.easypanel.host
VITE_API_BASE_URL=http://localhost:3000

# Timeout das requisições (ms)
VITE_API_TIMEOUT=30000

# Número de tentativas de retry
VITE_API_RETRY_ATTEMPTS=3

# Delay inicial para retry (ms)
VITE_API_RETRY_DELAY=1000

# Limite de requisições concorrentes
VITE_API_CONCURRENT_LIMIT=5

# ============================================================================
# Application Configuration
# ============================================================================

# Nome da aplicação
VITE_APP_NAME="Getmoto LTD"

# Versão da aplicação
VITE_APP_VERSION=1.0.0

# Ambiente
VITE_APP_ENV=production

# ============================================================================
# Feature Flags
# ============================================================================

# Habilitar modo de debug
VITE_FEATURE_DEBUG=false

# Habilitar logs detalhados
VITE_FEATURE_VERBOSE_LOGS=false

# Habilitar mock data para testes
VITE_FEATURE_MOCK_DATA=false

# ============================================================================
# Storage Configuration
# ============================================================================

# Prefixo para chaves do localStorage
VITE_STORAGE_PREFIX=crm_getmoto

# Máximo de itens no histórico de busca
VITE_STORAGE_MAX_SEARCH_HISTORY=10

# ============================================================================
# UI Configuration
# ============================================================================

# Idioma padrão (pt-BR, en, es)
VITE_DEFAULT_LANGUAGE=pt-BR

# Tema padrão (light, dark)
VITE_DEFAULT_THEME=light

# Duração padrão de notificações (segundos)
VITE_NOTIFICATION_DURATION=3
